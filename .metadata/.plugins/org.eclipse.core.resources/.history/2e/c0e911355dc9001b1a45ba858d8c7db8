package br.com.zupacademy.proposta.consumer.response;

import javax.validation.constraints.NotBlank;
import javax.validation.constraints.NotNull;

import br.com.zupacademy.proposta.model.Cartao;
import br.com.zupacademy.proposta.validator.NaoExiste;

public class CartaoResponse {
	@NotBlank
	@NaoExiste(domainClass = Cartao.class, fieldName = "numero")
	private String id;
	@NotNull
	private Long limite;

	public CartaoResponse(@NotBlank String id, @NotNull Long limite) {
		this.id = id;
		this.limite = limite;
	}

	public Cartao toModel() {
        return new Cartao(id, limite);
    }

	public String getId() {
		return id;
	}

	public Long getLimite() {
		return limite;
	}

}
