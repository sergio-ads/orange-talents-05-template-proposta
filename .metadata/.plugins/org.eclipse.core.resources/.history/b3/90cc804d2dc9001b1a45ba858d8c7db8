package br.com.zupacademy.proposta.consumer;

import javax.validation.constraints.NotBlank;

import org.springframework.cloud.openfeign.FeignClient;
import org.springframework.web.bind.annotation.PostMapping;
import org.springframework.web.bind.annotation.RequestBody;

import br.com.zupacademy.proposta.consumer.request.ResultadoAnaliseResponse;

@FeignClient(value = "apiAvaliacao", url = "${apiAvaliacao.host}")
public interface AvaliacaoClient {

	@PostMapping
	ResultadoAnaliseResponse solicitar(@RequestBody @NotBlank String documento, @RequestBody String nome, @RequestBody String idProposta);
	
}
