package br.com.zupacademy.proposta.consumer;

import javax.validation.constraints.NotBlank;

import org.springframework.cloud.openfeign.FeignClient;
import org.springframework.web.bind.annotation.PostMapping;

import br.com.zupacademy.proposta.consumer.request.ResultadoAnaliseRequest;

@FeignClient("apiAvaliacao")
public interface AvaliacaoClient {

	@PostMapping(value = "http://localhost:9999/api/solicitacao")
	ResultadoAnaliseRequest solicitar(@NotBlank String documento, String nome, String idProposta);
	
}
