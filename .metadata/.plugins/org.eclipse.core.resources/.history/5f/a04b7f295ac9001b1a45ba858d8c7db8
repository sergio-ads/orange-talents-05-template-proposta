package br.com.zupacademy.proposta.consumer.response;

import javax.validation.constraints.NotBlank;
import javax.validation.constraints.NotNull;

import br.com.zupacademy.proposta.model.Proposta;
import br.com.zupacademy.proposta.model.enums.ResultadoAvaliacao;

public class CartaoResponse {
	@NotBlank
	private String id;
	@NotNull
	private Long limite;

	public CartoesResponse(@NotBlank String id, @NotNull Long limite) {
		this.id = id;
		this.limite = limite;
	}

	public Cartao toModel() {
        return new Cartao(cpfOuCnpj, email, nome, endereco, salario, ResultadoAvaliacao.NAO_VERIFICADO);
    }

	public String getId() {
		return id;
	}

	public Long getLimite() {
		return limite;
	}

}
